<p id="notice"><%= notice %></p>

<p>
  <strong>Name:</strong>
  <%= @startup.name %>
</p>

<p>
  <strong>Description:</strong>
  <%= @startup.description %>
</p>

<p>
  <strong>Price:</strong>
  <%= @startup.price %>
</p>

<p>
  <strong>Url:</strong>
  <%= @startup.url %>
</p>

<h3>Reviews</h3>
<% @startup.reviews.each do |review| %>
<p>
<%= review.comment %>
<br>
Added on: <%= review.created_at %>
</p>
<% end %>
<h3>New Review</h3>
<%= render 'reviews/form' %>

<%= link_to 'Edit', edit_startup_path(@startup) %> |
